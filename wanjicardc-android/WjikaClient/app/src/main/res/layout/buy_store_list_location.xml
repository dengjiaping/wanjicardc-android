<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_location"
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:layout_gravity="center"
    android:background="@color/main_back"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/store_list_location_warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:background="@drawable/location_prompt" />

    <TextView
        android:id="@+id/txt_location_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/wjika_client_comment_marginleft"
        android:layout_weight="1.0"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:textColor="@color/wjika_client_introduce_words"
        android:textSize="@dimen/font_size_e" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/btn_card_login_margin"
        android:gravity="right|center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/store_location_open"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="立即开启"
            android:textColor="@color/wjika_client_introduce_words"
            android:textSize="11sp" />

        <ImageView
            android:id="@+id/btn_retry_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:background="@drawable/ic_right_arrow" />
    </LinearLayout>
</LinearLayout>
