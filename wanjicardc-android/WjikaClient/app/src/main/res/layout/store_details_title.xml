<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/cell_white_bg"
              android:orientation="vertical">

	<TextView
		android:layout_marginLeft="12dp"
		android:id="@+id/txt_name"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="15dp"
		android:gravity="center_vertical"
		android:textColor="@color/wjika_client_dark_grey"
		android:textSize="@dimen/font_size_b"/>

	<LinearLayout
		android:layout_marginLeft="12dp"
		android:id="@+id/layout_businesstime"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="15dp"
		android:gravity="center_vertical"
		android:orientation="horizontal">
		<TextView
			android:id="@+id/txt_businesstime_label"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/details_businesstime"/>
		<TextView
			android:id="@+id/txt_businesstime"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="@dimen/details_item_marginleft"
			android:layout_weight="1.0"/>
	</LinearLayout>

	<LinearLayout
		android:layout_marginLeft="12dp"
		android:visibility="gone"
		android:id="@+id/store_activity"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="15dp"
		android:orientation="horizontal">
		<android.support.v7.widget.CardView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			fresco:cardBackgroundColor="@color/wjika_client_card_red"
			fresco:cardCornerRadius="2dp">
			<TextView
				android:textSize="9sp"
				android:id="@+id/txt_action1"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingBottom="1dp"
				android:paddingLeft="5dp"
				android:paddingRight="5dp"
				android:paddingTop="1dp"
				android:text="特惠"
				android:textColor="#ffffff"/>
		</android.support.v7.widget.CardView>
	</LinearLayout>

	<View
		android:layout_width="match_parent"
		android:layout_height="1px"
		android:layout_marginTop="10dp"
		android:background="#e6e7e8"/>
	<LinearLayout
		android:layout_marginLeft="12dp"
		android:id="@+id/layout_address"
		android:layout_width="match_parent"
		android:layout_height="@dimen/wjika_client_comment_height"
		android:gravity="center_vertical"
		android:orientation="horizontal">
		<LinearLayout
			android:id="@+id/txt_address_label"
			android:layout_weight="1.0"
			android:orientation="horizontal"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:background="@drawable/store_detail_locaton"/>
			<TextView
				android:id="@+id/txt_address"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_marginLeft="@dimen/wjika_client_comment_marginleft"
				android:text="北京市西城区西单大悦城二层星巴克对面3-56号"
				android:textColor="#9099a6"
				android:textSize="12sp"/>

		</LinearLayout>

		<View
			android:layout_width="1px"
			android:layout_height="32dp"
			android:background="@color/wjika_client_spilt_line"/>
		<RelativeLayout
			android:id="@+id/store_detail_phone"
			android:layout_width="50dp"
			android:layout_height="@dimen/wjika_client_comment_height">
			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerInParent="true"
				android:layout_gravity="center"
				android:background="@drawable/store_detail_phone"/>
		</RelativeLayout>
	</LinearLayout>
	<View
		android:layout_width="match_parent"
		android:layout_height="1px"
		android:background="@drawable/line_bg"/>
</LinearLayout>