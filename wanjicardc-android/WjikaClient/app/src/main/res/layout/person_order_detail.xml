<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingBottom="8dp"
		android:paddingLeft="12dp"
		android:paddingRight="12dp"
		android:paddingTop="8dp"
		android:text="@string/person_order_detail_title"
		android:textColor="@color/wjika_client_middle_gray"
		android:textSize="16sp"/>

	<View style="@style/person_split_left_right"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:paddingLeft="12dp"
		android:paddingRight="12dp"
		android:paddingTop="10dp"
		android:paddingBottom="10dp">

		<TextView
			android:id="@+id/order_detail_recharge_price"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="@string/wjika_client_selling_price"
			android:textColor="@color/wjika_client_dark_grey"
			android:textSize="12sp"/>

		<TextView
			android:id="@+id/person_order_amount"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/wjika_client_middle_gray"
			android:textSize="12sp"/>
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:paddingLeft="12dp"
		android:paddingRight="12dp"
		android:paddingBottom="10dp">

		<TextView
			android:id="@+id/order_detail_num"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="@string/wjika_client_count_label"
			android:textColor="@color/wjika_client_dark_grey"
			android:textSize="12sp"/>

		<TextView
			android:id="@+id/person_order_special_amount"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/wjika_client_middle_gray"
			android:textSize="12sp"/>

	</LinearLayout>

	<LinearLayout
		android:id="@+id/ll_order_detail_account"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:paddingBottom="10dp"
		android:paddingLeft="12dp"
		android:paddingRight="12dp">

		<TextView
			android:id="@+id/order_detail_account"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:textColor="@color/wjika_client_dark_grey"
			android:textSize="12sp"/>

		<TextView
			android:id="@+id/order_account_detail"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/wjika_client_middle_gray"
			android:textSize="12sp"/>
	</LinearLayout>

	<View style="@style/person_split_match"/>

	<LinearLayout
		android:id="@+id/person_order_pay_amount_layout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="right"
		android:layout_marginTop="10dp"
		android:gravity="right"
		android:orientation="horizontal"
		android:paddingLeft="12dp"
		android:paddingRight="12dp">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/person_pay_amount"
			android:textColor="@color/wjika_client_dark_grey"
			android:textSize="14sp"/>

		<TextView
			android:id="@+id/person_order_pay_amount"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/wjika_client_price_red"
			android:textSize="14sp"/>
	</LinearLayout>

	<TextView
		android:id="@+id/person_order_info_time"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="right"
		android:gravity="right"
		android:padding="10dp"
		android:textColor="@color/wjika_client_introduce_words"
		android:textSize="12sp"/>
</LinearLayout>