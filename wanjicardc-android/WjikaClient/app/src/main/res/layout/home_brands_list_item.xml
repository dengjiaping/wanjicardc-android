<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@color/main_module_back"
              android:orientation="vertical">

	<android.support.v7.widget.CardView
		android:id="@+id/cv_brand_ecard_bg"
		android:layout_width="76dp"
		android:layout_height="45dp"
		fresco:cardBackgroundColor="@color/wjika_client_card_blue"
		fresco:cardCornerRadius="5dp">

		<com.facebook.drawee.view.SimpleDraweeView
			android:id="@+id/dv_brand_item_surface_logo"
			android:layout_width="35dp"
			android:layout_height="25dp"
			android:layout_gravity="center"
			android:src="@drawable/home_hotbrand_default"
			fresco:actualImageScaleType="fitCenter"/>
	</android.support.v7.widget.CardView>

	<TextView
		android:id="@+id/tv_brand_item_name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:layout_marginBottom="16dp"
		android:layout_marginTop="5dp"
		android:singleLine="true"
		android:textColor="@color/wjika_client_dark_grey"
		android:textSize="10sp"/>
</LinearLayout>