<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:fresco="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

	<LinearLayout
		android:id="@+id/layout_card_logo"
		android:layout_width="109dp"
		android:layout_height="61dp"
		android:layout_alignParentLeft="true"
		android:layout_centerVertical="true">

		<include layout="@layout/card_small_logo_view"/>
	</LinearLayout>

	<!--fresco:failureImage="@drawable/def_cover_img"-->
	<!--fresco:placeholderImage="@drawable/def_cover_img"-->
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_gravity="center_vertical"
		android:layout_toRightOf="@id/layout_card_logo"
		android:orientation="vertical"
		android:paddingLeft="15dp">
		<TextView
			android:id="@+id/txt_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginRight="@dimen/wjika_client_comment_marginright"
			android:ellipsize="marquee"
			android:marqueeRepeatLimit="marquee_forever"
			android:singleLine="true"
			android:text="味多美"
			android:textColor="@color/wjika_client_dark_grey"
			android:textSize="15sp"/>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="8dp"
			android:orientation="horizontal">
			<android.support.v7.widget.CardView
				android:id="@+id/store_limit_shop"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginRight="10dp"
				android:layout_gravity="center"
				fresco:cardBackgroundColor="@color/wjika_client_card_red"
				fresco:cardCornerRadius="2dp">
				<TextView
					android:textSize="9sp"
					android:id="@+id/txt_action1"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingBottom="1dp"
					android:paddingLeft="5dp"
					android:paddingRight="5dp"
					android:paddingTop="1dp"
					android:text="特惠"
					android:textColor="#ffffff"/>
			</android.support.v7.widget.CardView>
			<TextView
				android:id="@+id/store_face_value"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_marginLeft="10dp"
				android:ellipsize="marquee"
				android:marqueeRepeatLimit="marquee_forever"
				android:singleLine="true"
				android:text="面值100元"
				android:textColor="#9099a6"
				android:textSize="12sp"/>
		</LinearLayout>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="6dp"
			android:orientation="horizontal">
			<TextView
				android:id="@+id/txt_total_sale"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="¥689.00"
				android:textColor="@color/wjika_client_price_red"
				android:textSize="@dimen/font_size_c"/>
			<TextView
				android:id="@+id/store_original_price"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="5dp"
				android:text="¥923.00"
				android:textColor="#9099a6"
				android:textSize="10sp"/>
		</LinearLayout>
	</LinearLayout>
	<TextView
		android:id="@+id/out_of_count"
		style="@style/Text"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_alignParentBottom="true"
		android:layout_marginRight="@dimen/wjika_client_comment_marginright"
		android:visibility="gone"/>


	<LinearLayout
		android:id="@+id/ll_sale_progress"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_alignParentRight="true"
		android:layout_marginRight="12dp"
		android:orientation="vertical">
		<TextView
			android:id="@+id/store_sale_progress"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:text="已售67%"
			android:textColor="#9099a6"
			android:textSize="11sp"/>
		<ProgressBar
			android:id="@+id/store_progress_sale"
			style="?android:attr/progressBarStyleHorizontal"
			android:layout_width="50dp"
			android:layout_height="7dp"
			android:progressDrawable="@drawable/buy_card_progress_bg"/>
	</LinearLayout>
</RelativeLayout>