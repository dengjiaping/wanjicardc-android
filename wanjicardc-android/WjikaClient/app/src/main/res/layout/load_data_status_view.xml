<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@+id/loading_layout"
             xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginTop="76dp"
		android:gravity="center_horizontal"
		android:orientation="vertical">

		<ImageView
			android:id="@+id/loading_img_empty"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/ic_empty"/>

		<TextView
			android:id="@+id/loading_txt_empty"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="20dp"
			android:text="暂无数据"
			android:textColor="@color/wjika_client_hint_words"
			android:textSize="14sp"/>
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="center"
		android:orientation="vertical">

		<com.common.widget.ProgressImageView
			android:id="@+id/loading_img_anim"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/progress_loadanimation"/>

		<TextView
			android:id="@+id/loading_btn_card_empty"
			android:layout_width="120dp"
			android:layout_height="wrap_content"
			android:layout_marginTop="15dp"
			android:background="@drawable/ic_tran_button"
			android:gravity="center"
			android:padding="10dp"
			android:text="去购买"
			android:textColor="@color/wjika_client_title_bg"
			android:visibility="gone"/>

		<ImageView
			android:id="@+id/loading_img_refresh"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/ic_refresh"/>

		<TextView
			android:id="@+id/loading_txt_retry"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/wjika_client_comment_margintop"
			android:text="页面加载失败，请点击屏幕刷新！"/>
	</LinearLayout>

</FrameLayout>
