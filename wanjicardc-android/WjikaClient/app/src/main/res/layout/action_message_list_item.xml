<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical"
              android:paddingLeft="10dp"
              android:paddingRight="10dp"
              android:paddingTop="10dp">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@drawable/action_message_list_bg"
		android:orientation="vertical"
		android:padding="2dp">

		<com.facebook.drawee.view.SimpleDraweeView
			android:id="@+id/action_message_image"
			android:layout_width="match_parent"
			android:layout_height="100dp"
			fresco:failureImage="@drawable/ic_launcher"
			fresco:placeholderImage="@drawable/ic_launcher"
			fresco:roundBottomLeft="false"
			fresco:roundBottomRight="false"
			fresco:roundTopLeft="true"
			fresco:roundTopRight="true"
			fresco:roundedCornerRadius="5dp"/>

		<LinearLayout
			android:id="@+id/msg_container_ll"
			android:layout_width="match_parent"
			android:layout_height="34dp"
			android:gravity="right|center_vertical"
			android:orientation="horizontal">

			<TextView
				android:id="@+id/message_date_tv"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center_vertical"/>

			<TextView
				android:id="@+id/message_time_tv"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="24dp"
				android:layout_marginRight="10dp"
				android:gravity="center_vertical"/>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>