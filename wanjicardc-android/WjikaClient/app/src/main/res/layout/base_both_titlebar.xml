<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/main_custom_toolbar"
	android:layout_width="match_parent"
	android:layout_height="48dp"
	android:background="@color/wjika_client_title_bg"
	android:visibility="visible">

	<ImageView
		android:id="@+id/main_iv_message_alert"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_marginLeft="15dp"
		android:src="@drawable/message_icon"/>

	<TextView
		android:id="@+id/home_message_dot"
		android:layout_width="9dp"
		android:layout_height="9dp"
		android:layout_alignRight="@id/main_iv_message_alert"
		android:layout_alignTop="@id/main_iv_message_alert"
		android:layout_marginRight="-5dp"
		android:layout_marginTop="-5dp"
		android:background="@drawable/red_circle"
		android:visibility="gone"/>

	<TextView
		android:id="@+id/tv_home_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true"
		android:alpha="0"
		android:text="@string/main_tab_menu"
		android:textSize="18sp"
		android:textColor="@color/white"/>

	<ImageView
		android:id="@+id/iv_home_cardpkg"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true"
		android:layout_marginRight="15dp"
		android:src="@drawable/qr_scan_icon"/>

	<ImageView
		android:id="@+id/iv_home_bum"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_marginRight="15dp"
		android:layout_toLeftOf="@id/iv_home_cardpkg"
		android:src="@drawable/baozi_icon"/>
</RelativeLayout>