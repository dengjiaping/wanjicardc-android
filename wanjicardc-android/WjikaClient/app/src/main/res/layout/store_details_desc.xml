<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_store_desc"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/wjika_client_comment_margintop"
    android:background="@drawable/line_bg">
    <RelativeLayout
        android:id="@+id/store_detail_describe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_centerInParent="true"
            android:id="@+id/txt_store_details_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/store_details_desc_title"
            android:textSize="@dimen/font_size_c"
            android:textColor="@color/wjika_client_dark_grey"
            android:layout_marginLeft="12dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:gravity="center_vertical"/>

        <ImageView
            android:layout_centerInParent="true"
            android:id="@+id/store_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_black_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/btn_card_login_margin"/>
    </RelativeLayout>
    <TextView
        android:lineSpacingExtra="8dp"
        android:id="@+id/store_details_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:textColor="@color/wjika_client_litte_gray"
        android:focusable="false"
        android:textSize="@dimen/font_size_c"/>
</LinearLayout>