<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginLeft="12dp"
              android:layout_marginRight="12dp"
              android:background="@drawable/djpay_bankitem_bg"
              android:orientation="vertical">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingBottom="15dp"
		android:paddingLeft="10dp"
		android:paddingRight="10dp"
		android:paddingTop="15dp">

		<com.facebook.drawee.view.SimpleDraweeView
			android:id="@+id/djpay_bank_img"
			android:layout_width="42dp"
			android:layout_height="42dp"
			android:layout_centerVertical="true"
			fresco:actualImageScaleType="focusCrop"
			fresco:failureImage="@drawable/home_category_default"
			fresco:placeholderImage="@drawable/home_category_default"
			fresco:roundAsCircle="true"/>

		<TextView
			android:id="@+id/djpay_bank_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="15dp"
			android:layout_toRightOf="@id/djpay_bank_img"
			android:textSize="15sp"
			android:textColor="@color/wjika_client_middle_gray"
			android:text="掌上银行"/>

		<TextView
			android:id="@+id/djpay_bank_num"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:paddingRight="10dp"
			android:textSize="15sp"
			android:textColor="@color/wjika_client_litte_gray"
			android:text="56456465165465464654"/>

		<TextView
			android:id="@+id/djpay_bank_type"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/djpay_bank_name"
			android:layout_marginLeft="15dp"
			android:layout_marginTop="15dp"
			android:layout_toRightOf="@id/djpay_bank_img"
			android:textSize="13sp"
			android:textColor="@color/wjika_client_litte_gray"
			android:text="贷记卡信用卡"/>

		<TextView
			android:id="@+id/djpay_bank_state"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_below="@+id/djpay_bank_num"
			android:paddingRight="10dp"
			android:layout_marginTop="15dp"
			android:textSize="13sp"
			android:textColor="@color/wjika_client_litte_gray"
			android:text="已绑定"/>
	</RelativeLayout>

	<View style="@style/person_split_left_right"/>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="45dp"
		android:gravity="center_vertical"
		android:paddingLeft="10dp"
		android:paddingRight="10dp">

		<TextView
			android:id="@+id/djpay_bank_set"
			android:layout_width="80dp"
			android:layout_height="20dp"
			android:gravity="center"
			android:textSize="12sp"
			android:textColor="@color/wjika_client_title_bg"
			android:text="设为首款卡"
			android:background="@drawable/djpay_bank_setting_bg"/>

		<ImageView
			android:id="@+id/djpay_bank_delete"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingLeft="10dp"
			android:paddingRight="10dp"
			android:layout_alignParentRight="true"
			android:src="@drawable/djpay_bank_delete"/>
	</RelativeLayout>
</LinearLayout>