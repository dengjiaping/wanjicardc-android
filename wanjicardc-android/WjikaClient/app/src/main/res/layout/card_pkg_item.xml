<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="77dp"
                android:paddingTop="13dp"
                android:paddingBottom="14dp"
                android:background="@drawable/card_pkg_blue_bg">

	<com.facebook.drawee.view.SimpleDraweeView
		android:id="@+id/card_item_logo"
		android:layout_width="50dp"
		android:layout_height="50dp"
		android:layout_marginLeft="20dp"
		android:paddingTop="10dp"
		android:paddingBottom="10dp"
		android:paddingLeft="1dp"
		android:paddingRight="1dp"
		android:background="@drawable/home_brand_item_logo"
		app:actualImageScaleType="fitCenter"
		app:background="@drawable/default_image_bg"
		app:fadeDuration="500"
		app:failureImage="@drawable/default_image_bg"
		app:placeholderImage="@drawable/default_image_bg"/>

	<View
		android:layout_width="1px"
		android:layout_height="50dp"
		android:layout_marginLeft="85dp"
		android:background="@color/white"/>

	<TextView
		android:id="@+id/card_item_name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="5dp"
		android:layout_marginLeft="100dp"
		android:singleLine="true"
		android:textColor="@color/white"/>

	<TextView
		android:id="@+id/card_item_balance"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/card_item_name"
		android:layout_alignBottom="@id/card_item_logo"
		android:layout_marginLeft="100dp"
		android:gravity="bottom"
		android:textColor="@color/white"/>
</RelativeLayout>