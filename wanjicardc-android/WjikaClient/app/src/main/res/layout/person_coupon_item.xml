<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/person_coupon_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_weight="1"
    android:background="@drawable/coupon_normal_bg"
    android:padding="0dp">

    <ImageView
        android:id="@+id/person_coupon_expired"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="6dp"
        android:layout_marginTop="4.5dp"
        android:src="@drawable/coupon_expiring"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/person_coupon_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="19dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_toLeftOf="@+id/person_coupon_value"
        android:textColor="@color/wjika_client_middle_gray"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/person_coupon_scope"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/person_coupon_name"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/person_coupon_value"
        android:maxLines="2"
        android:lineSpacingExtra="6dp"
        android:ellipsize="end"
        android:textColor="@color/wjika_client_gray"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/person_coupon_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="28dp"
        android:layout_marginTop="22dp"
        android:textColor="@color/wjika_client_dark_grey"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/person_coupon_validity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/person_coupon_value"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="6dp"
        android:textColor="@color/wjika_client_gray"
        android:textSize="12sp"/>
</RelativeLayout>