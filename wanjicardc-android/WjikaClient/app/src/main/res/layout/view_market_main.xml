<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/v_baozi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/iv_spilte_x"
            android:background="@color/white">

            <ImageView
                android:id="@+id/iv_steam_bun"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:background="@drawable/person_main_property_baozi" />

            <TextView
                android:id="@+id/tv_steam_bun_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@id/iv_steam_bun"
                android:textColor="#d9a109"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tv_steam_bun_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_steam_bun_count"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/tv_steam_bun_count"
                android:paddingBottom="3dp"
                android:text="个包子"
                android:textColor="#9099a6"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_no_login_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@id/iv_steam_bun"
                android:text="登录查看可用包子"
                android:textColor="#9099a6"
                android:textSize="14sp" />
        </RelativeLayout>

        <Button
            android:id="@+id/btn_recharge"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:background="@drawable/ic_button"
            android:text="@string/card_current_charge"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <ImageView
            android:id="@id/iv_spilte_x"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@id/btn_recharge"
            android:background="@drawable/person_main_baozi_line" />

        <View
            style="@style/person_split_match"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <View style="@style/person_split_margin_top"
        android:visibility="gone"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:text="生活服务"
        android:textColor="#2f333b"
        android:textSize="14sp"
        android:visibility="gone"/>

    <View style="@style/person_split_match" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="98dp"
        android:layout_gravity="center_vertical"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_lift_water"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:drawablePadding="8dp"
            android:drawableTop="@drawable/market_life_service_water_bg"
            android:gravity="center"
            android:text="水费"
            android:textColor="#2f333b"
            android:textSize="14sp" />

        <View
            android:id="@+id/action_divider"
            android:layout_width="1px"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@color/wjika_client_spilt_line" />

        <TextView
            android:id="@+id/tv_lift_ele"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:drawablePadding="8dp"
            android:drawableTop="@drawable/market_life_service_ele_bg"
            android:gravity="center"
            android:text="电费"
            android:textColor="#2f333b"
            android:textSize="14sp" />

        <View
            android:layout_width="1px"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@color/wjika_client_spilt_line" />

        <TextView
            android:id="@+id/tv_lift_fire"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:drawablePadding="8dp"
            android:drawableTop="@drawable/market_life_service_fire_bg"
            android:gravity="center"
            android:text="燃气费"
            android:textColor="#2f333b"
            android:textSize="14sp" />
    </LinearLayout>

    <View style="@style/person_split_match" />

    <View style="@style/person_split_margin_top" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="@string/person_electric_card"
        android:textColor="@color/wjika_client_dark_grey"
        android:textSize="14sp" />

    <View style="@style/person_split_match" />

</LinearLayout>
