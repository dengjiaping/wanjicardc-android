<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll_select_pay_type"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical"
              android:paddingLeft="12dp">

	<TextView
		android:layout_width="match_parent"
		android:layout_height="49dp"
		android:background="@color/white"
		android:gravity="center_vertical"
		android:text="@string/person_recharge_pay_channel"
		android:textColor="@color/wjika_client_middle_gray"
		android:textSize="@dimen/font_size_a"/>

	<View
		style="@style/person_split_match"
		android:layout_marginRight="12dp"/>

	<RelativeLayout
		android:id="@+id/person_recharge_alipay"
		android:layout_width="match_parent"
		android:layout_height="49dp"
		android:background="@color/white"
		android:paddingRight="13dp">

		<ImageView
			android:id="@+id/person_pay_ali_img"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:src="@drawable/alipay_icon"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_toRightOf="@+id/person_pay_ali_img"
			android:paddingLeft="10dp"
			android:text="支付宝支付"/>

		<RadioButton
			android:id="@+id/person_recharge_ali"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:button="@drawable/radio_button_selector"
			android:checked="true"
			android:clickable="false"
			android:focusable="false"/>
	</RelativeLayout>

	<View
		android:id="@+id/vline_recharge_yeepay"
		style="@style/person_split_match"
		android:layout_marginRight="12dp"/>

	<RelativeLayout
		android:id="@+id/person_recharge_yeepay"
		android:layout_width="match_parent"
		android:layout_height="49dp"
		android:background="@color/white"
		android:paddingRight="13dp">

		<ImageView
			android:id="@+id/person_pay_yee_img"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:src="@drawable/yeepay_icon"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_toRightOf="@+id/person_pay_yee_img"
			android:paddingLeft="10dp"
			android:text="银行卡支付"/>

		<RadioButton
			android:id="@+id/person_recharge_yee"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:button="@drawable/radio_button_selector"
			android:clickable="false"
			android:focusable="false"/>
	</RelativeLayout>

	<View
		android:id="@+id/vline_recharge_alipay"
		style="@style/person_split_match"
		android:layout_marginRight="12dp"
		android:visibility="gone"/>

	<RelativeLayout
		android:id="@+id/person_recharge_baozipay"
		android:layout_width="match_parent"
		android:layout_height="49dp"
		android:background="@color/white"
		android:paddingRight="13dp"
		android:visibility="gone">

		<ImageView
			android:id="@+id/person_pay_baozi_img"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:src="@drawable/baozipay_icon"/>

		<TextView
			android:id="@+id/pay_baozi"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_toRightOf="@+id/person_pay_baozi_img"
			android:paddingLeft="10dp"
			android:text="包子支付"/>

		<TextView
			android:id="@+id/person_baozi_info"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_marginLeft="5dp"
			android:layout_toRightOf="@+id/pay_baozi"
			android:textColor="@color/card_store_price"
			android:textSize="11sp"/>

		<RadioButton
			android:id="@+id/person_recharge_baozi"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:button="@drawable/radio_button_selector"
			android:checked="false"
			android:clickable="false"
			android:focusable="false"/>
	</RelativeLayout>


</LinearLayout>