<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/wjika_client_common_bg"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/person_info_head"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/person_info_avatar"
                android:textColor="@color/wjika_client_dark_grey"
                android:textSize="15sp"/>

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/person_info_avatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                app:actualImageScaleType="focusCrop"
                app:failureImage="@drawable/default_avatar_bg"
                app:placeholderImage="@drawable/default_avatar_bg"
                app:roundAsCircle="true"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:src="@drawable/person_jump_icon"/>
        </LinearLayout>

        <View
            style="@style/person_split_left_right"/>

        <LinearLayout
            android:id="@+id/person_info_authentication"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="1px"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/person_info_auth"
                android:textColor="@color/wjika_client_dark_grey"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/person_info_authentication_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="8dp"
                android:drawableRight="@drawable/person_jump_icon"
                android:gravity="center_vertical"
                android:textColor="@color/wjika_client_introduce_words"
                android:textSize="13sp"/>
        </LinearLayout>

        <View
            style="@style/person_split_left_right"/>

        <LinearLayout
            android:id="@+id/person_info_gender_ll"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="1px"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/person_info_sex"
                android:textColor="@color/wjika_client_dark_grey"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/person_info_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="8dp"
                android:drawableRight="@drawable/person_jump_icon"
                android:gravity="center_vertical"
                android:textColor="@color/wjika_client_introduce_words"
                android:textSize="13sp"/>
        </LinearLayout>

        <View
            style="@style/person_split_left_right"/>

        <LinearLayout
            android:id="@+id/person_info_birthday_ll"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="1px"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/person_info_birthday_text"
                android:textColor="@color/wjika_client_dark_grey"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/person_info_birthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="8dp"
                android:drawableRight="@drawable/person_jump_icon"
                android:gravity="center_vertical"
                android:textColor="@color/wjika_client_introduce_words"
                android:textSize="13sp"/>
        </LinearLayout>

        <View
            style="@style/person_split_left_right"/>

        <LinearLayout
            android:id="@+id/person_info_location_ll"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="1px"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/person_info_location"
                android:textColor="@color/wjika_client_dark_grey"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/person_info_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:drawablePadding="8dp"
                android:drawableRight="@drawable/person_jump_icon"
                android:ellipsize="end"
                android:gravity="right"
                android:singleLine="true"
                android:textColor="@color/wjika_client_introduce_words"
                android:textSize="13sp"/>
        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/person_split_match"/>
</LinearLayout>