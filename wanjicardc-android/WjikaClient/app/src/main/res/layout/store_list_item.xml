<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:fresco="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
	>

	<com.facebook.drawee.view.SimpleDraweeView
		android:layout_marginTop="30dp"
		android:id="@+id/store_icon"
		android:layout_width="90dp"
		android:layout_height="65dp"
		android:layout_centerVertical="true"
		android:background="@drawable/ic_launcher"
		android:layout_marginLeft="12dp"
		fresco:failureImage="@drawable/store_list_def"
		fresco:placeholderImage="@drawable/store_list_def"/>

	<LinearLayout
		android:layout_alignTop="@id/store_icon"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
	    android:orientation="vertical"
		android:layout_toRightOf="@+id/store_icon"
		android:paddingLeft="15dp">
		<TextView
			android:id="@+id/store_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			style="@style/Text.Title"
			android:text="盛世彩逸美容美发（安定门旗舰店）"
			android:textSize="15sp"
			android:textColor="#2e323b"
		    android:ellipsize="end"
		    android:marqueeRepeatLimit="marquee_forever"
		    android:singleLine="true"
		    android:layout_marginRight="10dp"/>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_marginTop="8dp">
			<android.support.v7.widget.CardView
				android:id="@+id/store_activities"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				fresco:cardCornerRadius="2dp"
				android:layout_gravity="center"
				fresco:cardBackgroundColor="@color/wjika_client_card_red">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingTop="1dp"
					android:paddingBottom="1dp"
					android:paddingLeft="5dp"
					android:paddingRight="5dp"
					android:text="特惠"
					android:textSize="9sp"
					android:textColor="#ffffff"/>
			</android.support.v7.widget.CardView>
			<TextView
				android:layout_gravity="center"
				android:layout_marginLeft="10dp"
				android:id="@+id/store_category"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:ellipsize="end"
				android:marqueeRepeatLimit="marquee_forever"
				android:singleLine="true"
				android:text="美食 · 蛋糕甜点"
			    android:textColor="#9099a6"/>
		</LinearLayout>
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="6dp"
		    android:orientation="horizontal">
			<TextView
				android:id="@+id/store_out_of"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				style="@style/Text"
			    android:text="已售 2790"
				android:textColor="#9099a6"/>
			<TextView
				android:id="@+id/store_distance"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:drawablePadding="5dp"
				android:textColor="#9099a6"
				android:drawableLeft="@drawable/store_list_position"
			    android:layout_alignParentRight="true"
			    android:layout_marginRight="10dp"
			    android:text=""/>
		</RelativeLayout>
	</LinearLayout>
	<View
		android:layout_marginTop="30dp"
		android:layout_alignParentBottom="true"
		android:layout_width="match_parent"
		android:layout_height="1px"
		android:background="#e6e7e8"/>
</RelativeLayout>