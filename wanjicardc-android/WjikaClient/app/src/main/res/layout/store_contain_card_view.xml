<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/layout_store_contain_card"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginTop="@dimen/wjika_client_comment_margintop"
              android:background="@drawable/cell_white_bg"
              android:orientation="vertical">

	<RelativeLayout
		android:id="@+id/store_card_more"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<TextView
			android:id="@+id/txt_store_contain_card_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_alignParentTop="true"
			android:layout_marginBottom="15dp"
			android:layout_marginLeft="12dp"
			android:layout_marginTop="15dp"
			android:gravity="center_vertical"
			android:text="@string/store_showcase_title"
			android:textColor="@color/wjika_client_dark_grey"
			android:textSize="@dimen/font_size_c"/>

		<LinearLayout
			android:id="@+id/store_showcase"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_centerInParent="true">
			<TextView
				android:id="@+id/check_more_product"
				android:layout_marginRight="8dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:text="查看全部"
				android:textColor="@color/wjika_client_introduce_words"
				android:textSize="@dimen/font_size_e"/>
			<ImageView
				android:id="@+id/check_more_product_img"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_centerVertical="true"
				android:layout_marginRight="@dimen/wjika_client_comment_marginright"
				android:background="@drawable/ic_right_arrow"/>
		</LinearLayout>
	</RelativeLayout>

	<View
		android:layout_marginLeft="12dp"
		android:layout_marginRight="12dp"
		android:id="@+id/store_contain_card_divider"
		android:layout_width="match_parent"
		android:layout_height="1px"
		android:layout_marginTop="4dp"
		android:background="#e6e7e8"/>

	  <com.common.view.ListViewForInner
		  android:paddingRight="12dp"
		  android:paddingLeft="12dp"
		 android:id="@+id/store_contain_card_list"
		 android:layout_width="match_parent"
		 android:layout_height="wrap_content"
		 android:background="@color/white"
		 android:divider="@color/wjika_client_spilt_line"
		 android:dividerHeight="1px"
		 android:paddingTop="5dp"
		 android:focusable="false"
		 android:layout_below="@id/store_contain_card_divider"/>
	<View
		android:layout_width="match_parent"
		android:layout_height="1px"
		android:background="@drawable/cell_white_bg"/>
</LinearLayout>