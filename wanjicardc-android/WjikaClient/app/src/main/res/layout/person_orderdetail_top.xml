<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_marginTop="1px"
    android:background="@color/white"
    android:gravity="center"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">

    <TextView
        android:id="@+id/person_order_item_no"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/wjika_client_introduce_words"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/person_order_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/pay_countdown_icon"
        android:drawablePadding="5dp"
        android:textColor="@color/wjika_client_title_bg"
        android:textSize="12sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/person_order_item_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:textColor="@color/wjika_client_introduce_words"
        android:textSize="12sp" />
</LinearLayout>