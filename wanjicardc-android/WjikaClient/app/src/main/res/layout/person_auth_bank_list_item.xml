<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="48dp">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/bank_support_img"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        fresco:roundAsCircle="true"
        fresco:failureImage="@drawable/home_category_default"
        fresco:placeholderImage="@drawable/home_category_default"/>
    <TextView
        android:id="@+id/bank_support_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/bank_support_img"
        android:padding="15dp"
        android:text="某某银行"
        android:textColor="@color/wjika_client_middle_gray"
        android:textSize="15sp"/>
    <View
        android:layout_alignParentBottom="true"
        style="@style/person_split_left_right"/>
</RelativeLayout>