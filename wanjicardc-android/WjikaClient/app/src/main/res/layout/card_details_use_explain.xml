<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_use_explain"
              android:visibility="gone"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cell_white_bg"
    android:layout_marginTop="@dimen/wjika_client_comment_margintop">
    <RelativeLayout
        android:id="@+id/card_use_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_card_details_use_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/card_details_use_explian"
            android:textSize="@dimen/font_size_c"
            android:textColor="@color/wjika_client_middle_gray"
            android:layout_marginLeft="@dimen/wjika_client_comment_marginleft"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp" />

        <ImageView
            android:layout_centerInParent="true"
            android:id="@+id/card_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_black_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/btn_card_login_margin"/>
    </RelativeLayout>
    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="#9099a6"
        android:textSize="12sp"
        android:lineSpacingExtra="12dp"
        android:text="进店消费时出示自己的数字码/条形码/二维码验证；"
        android:id="@+id/card_use_explain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>