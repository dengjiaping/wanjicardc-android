<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wjika_client_common_bg"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <TextView
                android:id="@+id/person_verify_question_detail1"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:textColor="@color/wjika_client_middle_gray"
                android:textSize="15sp"/>

            <View
                style="@style/person_split_match"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/person_account_question_answer1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/account_safe_question_answer"
                    android:textColor="@color/wjika_client_middle_gray"
                    android:textSize="15sp"/>

                <com.wjika.client.widget.ClearEditText
                    android:id="@+id/verify_result1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:drawableRight="@drawable/search_result_img"
                    android:hint="@string/account_safe_input_answer"
                    android:textColorHint="@color/wjika_client_hint_words"
                    android:textColor="@color/wjika_client_dark_grey"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>
        <View
            style="@style/person_split_match"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <TextView
                android:id="@+id/person_verify_question_detail2"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:textColor="@color/wjika_client_middle_gray"
                android:textSize="15sp"/>


            <View
                style="@style/person_split_match"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/person_account_question_answer2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/account_safe_question_answer"
                    android:textColor="@color/wjika_client_middle_gray"
                    android:textSize="15sp"/>

                <com.wjika.client.widget.ClearEditText
                    android:id="@+id/verify_result2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:drawableRight="@drawable/search_result_img"
                    android:hint="@string/account_safe_input_answer"
                    android:textColorHint="@color/wjika_client_hint_words"
                    android:textColor="@color/wjika_client_dark_grey"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>
        <View
            style="@style/person_split_match"/>
        <LinearLayout
            android:id="@+id/person_verify_safe_third"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <TextView
                android:id="@+id/person_verify_question_detail3"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:textColor="@color/wjika_client_middle_gray"
                android:textSize="15sp"/>
            <View
                style="@style/person_split_match"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/person_account_question_answer3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/account_safe_question_answer"
                    android:textColor="@color/wjika_client_middle_gray"
                    android:textSize="15sp"/>

                <com.wjika.client.widget.ClearEditText
                    android:id="@+id/verify_result3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:drawableRight="@drawable/search_result_img"
                    android:hint="@string/account_safe_input_answer"
                    android:textColorHint="@color/wjika_client_hint_words"
                    android:textColor="@color/wjika_client_dark_grey"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>
        <View
            style="@style/person_split_match"/>
        <TextView
            android:id="@+id/person_verify_safe_completed"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center"
            android:layout_margin="@dimen/def_padding"
            android:layout_marginTop="50dp"
            android:background="@drawable/ic_button"
            android:enabled="false"
            android:text="@string/login_finish"
            android:textColor="@color/white"/>
    </LinearLayout>

</ScrollView>
