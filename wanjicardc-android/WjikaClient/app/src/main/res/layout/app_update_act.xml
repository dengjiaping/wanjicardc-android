<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:background="@android:color/transparent"
              android:orientation="vertical">

	<RelativeLayout
		android:layout_width="308dp"
		android:layout_height="wrap_content"
		android:background="@drawable/update_up_bg">

		<TextView
			android:id="@+id/update_layout"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="30dp"
			android:text="@string/update_title"
			android:textColor="@color/white"
			android:textSize="23sp"/>

		<TextView
			android:id="@+id/txt_update_version"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/update_layout"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="15dp"
			android:textSize="13sp"
			android:textColor="@color/white"/>
	</RelativeLayout>

	<RelativeLayout
		android:layout_width="308dp"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:paddingTop="@dimen/wjika_client_comment_margintop"
		android:paddingBottom="30dp"
		android:paddingLeft="@dimen/wjika_client_comment_margintop"
		android:paddingRight="@dimen/wjika_client_comment_margintop"
		android:background="@drawable/update_down_bg">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<TextView
				android:id="@+id/btn_ignore"
				android:layout_width="0dp"
				android:layout_height="40dp"
				android:layout_weight="1"
				android:gravity="center"
				android:layout_marginRight="5dp"
				android:background="@drawable/alert_cancel_bg"
				android:padding="0dp"
				android:text="@string/ignore"
				android:textSize="14sp"
				android:textColor="@color/wjika_client_title_bg"/>

			<TextView
				android:id="@+id/btn_update"
				android:layout_width="0dp"
				android:layout_height="40dp"
				android:layout_weight="1"
				android:gravity="center"
				android:layout_marginLeft="5dp"
				android:background="@drawable/alert_ok_bg"
				android:padding="0dp"
				android:text="@string/update"
				android:textSize="14sp"
				android:textColor="@color/white"/>

			<TextView
				android:id="@+id/btn_force_update"
				android:layout_width="0dp"
				android:layout_height="40dp"
				android:layout_weight="1"
				android:background="@drawable/alert_ok_bg"
				android:padding="0dp"
				android:gravity="center"
				android:text="@string/update"
				android:textSize="14sp"
				android:textColor="@color/white"
				android:visibility="gone"/>
		</LinearLayout>
	</RelativeLayout>
</LinearLayout>