<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="101dp"
    android:background="@color/white"
    android:paddingBottom="20dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="20dp">

    <LinearLayout
        android:id="@+id/person_card_cover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp">

        <include layout="@layout/card_small_logo_view" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/person_card_cover"
        android:orientation="vertical">

        <TextView
            android:id="@+id/person_card_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/wjika_client_dark_grey"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/person_card_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:textColor="@color/wjika_client_dark_grey"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/person_card_pay"
        android:layout_width="65dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/ic_tran_button"
        android:gravity="center"
        android:padding="0dp"
        android:text="@string/person_recharge_text"
        android:textColor="@color/wjika_client_title_bg"
        android:textSize="12sp" />
</RelativeLayout>