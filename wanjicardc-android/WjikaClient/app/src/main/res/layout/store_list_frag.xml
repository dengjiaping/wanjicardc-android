<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
	<include layout="@layout/base_toolbar" />
	<LinearLayout
		android:id="@+id/store_list"
		android:layout_width="match_parent"
		android:layout_height="@dimen/store_list_category_height"
		android:background="@color/white"
		android:orientation="horizontal">
		<LinearLayout
			android:id="@+id/ll_store_list_address"
			android:gravity="center"
			android:layout_weight="1"
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="match_parent">
			<TextView
				android:id="@+id/store_list_address"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/store_list_area"
				android:textColor="@color/store_list_category"
				android:paddingRight="10dp"
				android:singleLine="true"
				android:ellipsize="end"/>
			<ImageView
				android:id="@+id/store_address_arrow"
				android:background="@drawable/ic_black_arrow_down"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
		</LinearLayout>
		<View
			android:background="#e7e7e8"
			android:layout_gravity="center"
			android:layout_width="2px"
			android:layout_height="30px"/>
		<LinearLayout
			android:id="@+id/ll_store_list_category"
			android:gravity="center"
			android:layout_weight="1"
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="match_parent">
			<TextView
				android:id="@+id/store_list_category"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/store_list_category"
				android:textColor="@color/store_list_category"
				android:paddingRight="10dp"
				android:drawablePadding="@dimen/wjika_client_privilege_padding"
				android:singleLine="true"
				android:ellipsize="end"/>
			<ImageView
				android:id="@+id/store_category_arrow"
				android:background="@drawable/ic_black_arrow_down"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
		</LinearLayout>
		<View
			android:background="#e7e7e8"
			android:layout_gravity="center"
			android:layout_width="2px"
			android:layout_height="30px"/>
		<LinearLayout
			android:id="@+id/ll_store_list_hot"
			android:gravity="center"
			android:layout_weight="1"
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="match_parent">
			<TextView
				android:id="@+id/store_list_hot"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/store_list_rank"
				android:textColor="@color/store_list_category"
				android:paddingRight="10dp"
				android:drawablePadding="@dimen/wjika_client_privilege_padding"
				android:singleLine="true"
				android:ellipsize="end"/>
			<ImageView
				android:id="@+id/store_hot_arrow"
				android:background="@drawable/ic_black_arrow_down"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>

		</LinearLayout>
	</LinearLayout>
	<View
		android:layout_width="match_parent"
		android:layout_height="1px"
		android:background="#e6e7e8"/>
	<include layout="@layout/buy_store_list_location"/>
	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">
		<com.common.widget.FootLoadingListView
			android:id="@+id/store_list_detail"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:fadingEdge="none"
			android:cacheColorHint="#00000000"
			android:divider="#00000000"
			android:dividerHeight="1px"
			android:focusable="true"
			android:overScrollMode="never"
			android:focusableInTouchMode="true"
			android:listSelector="#00000000"/>
		<include layout="@layout/load_data_status_view"/>
	</FrameLayout>

</LinearLayout>