<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wjika_client_common_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/wjika_client_dark_grey"
            android:text="设置六位支付码"/>
        <EditText
            android:id="@+id/et_set_pay_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:layout_marginLeft="15dp"
            android:hint="@string/set_pay_pwd_hint"
            android:inputType="number"
            android:maxLength="6"
            android:password="true"
            android:singleLine="true"
            android:textColorHint="@color/wjika_client_hint_words"
            android:textColor="@color/wjika_client_dark_grey"
            android:textSize="@dimen/font_size_c" />
    </LinearLayout>
<View
    style="@style/person_split_left_right"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/wjika_client_dark_grey"
            android:text="确认支付密码"/>
        <EditText
            android:id="@+id/et_set_pay_pwd_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:hint="@string/set_pay_pwd_confirm_hint"
            android:layout_marginLeft="32dp"
            android:inputType="number"
            android:maxLength="6"
            android:password="true"
            android:singleLine="true"
            android:textColorHint="@color/wjika_client_hint_words"
            android:textColor="@color/wjika_client_dark_grey"
            android:textSize="@dimen/font_size_c" />
    </LinearLayout>
    <View
        style="@style/person_split_match"/>

    <TextView
        android:id="@+id/btn_set_pay_pwd_ok"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/wjika_client_comment_marginleft"
        android:layout_marginRight="@dimen/wjika_client_comment_marginright"
        android:layout_marginTop="30dp"
        android:background="@drawable/ic_button"
        android:gravity="center"
        android:enabled="false"
        android:text="@string/button_ok"
        android:textColor="@color/white" />
</LinearLayout>