<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/wjika_client_common_bg"
              android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/order_list_left"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/wjika_client_title_bg"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/order_list_left_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            android:src="@drawable/ic_back"/>

        <TextView
            android:id="@+id/order_list_left_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/wjika_client_comment_marginleft"
            android:ellipsize="end"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_a"/>
        <ImageView
            android:visibility="gone"
            android:id="@+id/order_list_left_img"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/order_list_left_text"
            android:layout_centerVertical="true"
            android:background="@drawable/home_btn_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <include layout="@layout/load_data_status_view"/>
    <com.common.widget.FootLoadingListView
        android:id="@+id/person_order_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:dividerHeight="1dp"
        android:divider="@color/wjika_client_common_bg"/>
</LinearLayout>