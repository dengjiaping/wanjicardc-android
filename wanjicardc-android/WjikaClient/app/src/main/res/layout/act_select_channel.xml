<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/wjika_client_common_bg"
              android:orientation="vertical">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/white">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingLeft="12dp"
			android:text="金额："
			android:textColor="@color/wjika_client_middle_gray"
			android:textSize="15sp"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingLeft="20dp"
			android:text="￥"
			android:textColor="@color/wjika_client_middle_gray"
			android:textSize="35sp"/>

		<TextView
			android:id="@+id/select_channel_amount"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="10dp"
			android:textColor="@color/wjika_client_middle_gray"
			android:textSize="50sp"/>
	</LinearLayout>

	<View style="@style/person_split_match"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dp"
		android:background="@color/white"
		android:divider="@drawable/ecard_divider_bg"
		android:orientation="vertical"
		android:showDividers="beginning|end">

		<TextView
			android:layout_width="match_parent"
			android:layout_height="44dp"
			android:gravity="center_vertical"
			android:paddingLeft="12dp"
			android:paddingRight="12dp"
			android:text="请选择支付通道"
			android:textColor="@color/wjika_client_middle_gray"
			android:textSize="15dp"/>

		<ListView
			android:id="@+id/select_channel_list"
			android:layout_width="match_parent"
			android:layout_height="match_parent"/>
	</LinearLayout>
</LinearLayout>