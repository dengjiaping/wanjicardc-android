<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:fresco="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingBottom="20dp"
                android:paddingTop="20dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/store_icon_support"
        android:layout_width="90dp"
        android:layout_height="65dp"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_launcher"
        fresco:failureImage="@drawable/store_list_def"
        fresco:placeholderImage="@drawable/store_list_def"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/store_icon_support"
        android:paddingLeft="15dp">
        <TextView
            android:id="@+id/store_name_support"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Text.Title"
            android:text="盛世彩逸美容美发（安定门旗舰店）"
            android:textSize="15sp"
            android:textColor="#2e323b"
            android:ellipsize="end"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:layout_marginRight="10dp"/>
        <TextView
            android:singleLine="true"
            android:id="@+id/support_address"
            android:textColor="#9099a6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="地址：北京市东城区安定门"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/store_out_of_support"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Text"
                android:text="已售 2790"
                android:textColor="#9099a6"/>
            <TextView
                android:id="@+id/store_distance_support"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:textColor="#9099a6"
                android:drawableLeft="@drawable/store_list_position"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                android:text="13,322.64km"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>