<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
	android:background="@color/wjika_client_common_bg">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="142dp"
		android:background="@drawable/cell_white_bg"
		android:gravity="center">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:drawableTop="@drawable/icon_pay_success"
			android:drawablePadding="15dp"
			android:textColor="#2f333b"
			android:textSize="16sp"
			android:text="完成提交"/>
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:layout_marginTop="10dp"
		android:paddingTop="20dp"
		android:paddingBottom="20dp"
		android:paddingLeft="12dp"
		android:paddingRight="12dp"
		android:background="@drawable/cell_white_bg">

		<TextView
			android:id="@+id/exchange_result_ecard"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="13sp"
			android:textColor="@color/wjika_client_introduce_words"/>

		<Space
			android:layout_width="match_parent"
			android:layout_height="14dp"/>

		<TextView
			android:id="@+id/exchange_result_bun"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="13sp"
			android:textColor="@color/wjika_client_introduce_words"/>
	</LinearLayout>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:paddingTop="12dp"
		android:textSize="12sp"
		android:textColor="@color/wjika_client_introduce_words"
		android:text="兑换成功的包子已经打入您的账户，您可以："/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingLeft="49dp"
		android:paddingRight="49dp"
		android:paddingTop="30dp"
		android:orientation="horizontal">

		<Button
			android:id="@+id/exchange_result_show"
			android:layout_width="117dp"
			android:layout_height="35dp"
			android:layout_weight="1"
			android:background="@drawable/pay_result_btn_bg"
			android:textColor="@color/wjika_client_introduce_words"
			android:text="立即查看"/>

		<Button
			android:id="@+id/exchange_result_continue"
			android:layout_width="117dp"
			android:layout_height="35dp"
			android:layout_marginLeft="28dp"
			android:layout_weight="1"
			android:background="@drawable/pay_result_btn_bg"
			android:textColor="@color/wjika_client_introduce_words"
			android:text="继续兑换"/>
	</LinearLayout>
</LinearLayout>